#join method
''.join([1,2,3]) - retrurn str '123'
#Concat str
a = 'Ivanchikus'
b = '&'
c = 'Maria'
s = a+b+c
print(s)
ss = ' '.join(a)#wait iterable object on input
print(ss) #I v a n
str1 = 'a, '
str2 = str1*2 #duplicate str
print(str2)#a, a,
#See how to use print method
print(a, c)#Ivan Maria
print(a, c, sep=',')#Ivan,Maria
print(a, c, sep=',', end='@!')#Ivan,Maria@!
#split method, return splited list of items
inn = 'Masha i Pasha'
print(inn.split(' '))#['Masha', 'i', 'Pasha']
#String Slice
print(a[0])#return first element of str "a", return copy of str!!!
print(a[-1])#return last element of str "a"
print(a[:3])#return str from first element to 3-1(not included el with index 3)
print(a[1:3])#return str from second element to 3-1
print(a[:5:2])#return str from first element to 5-1 with step 2
print(a[-3:])#return last 3 items
print(a[-3:-1])#return 2 items from end of string, include last item

